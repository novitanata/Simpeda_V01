
@model SIMPEDA_V01.Models.Dosen
@{
    ViewBag.Title = "Login";
}

<html>
    <head>
       
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <title>@ViewBag.Title Peminjaman Sepeda ITS</title>
    </head>
    <body>
    <section id="loginUser">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <br />
                        <h2>Login</h2>
                        <hr class="star-primary">
                    </div>
                </div>
                <div class="code">
                    <div class="col-lg-8 col-lg-offset-2">
                    <br />
                        <form role="form">
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken() 
                                @Html.ValidationSummary(true)
                                if (@ViewBag.Message != null)
                                { 
                                    <div style="border:1px solid red">
                                    @ViewBag.Message
                                    </div>
                                }
                            <table>
                                <tr>
                                    <div class="row">
                                        <td style="width:100px"><h4 small>NIP</h4> </td>
                                        
                                        <td> : </td>
                                        <td class="form-group col-xs-12 floating-label-form-group">@Html.TextBoxFor(a=>a.NIP)</td>
                                          @Html.ValidationMessageFor(a=>a.NIP)
                                    </div>
                                </tr>
                                <tr>
                                     <div class="row">
                                         <td style="width:100px"><h4 small>Kata Sandi</h4></td>
                                         <td> : </td>
                                         <td class="form-group col-xs-12 floating-label-form-group">@Html.TextBoxFor(a=>a.password_Dosen)</td>
                                         @Html.ValidationMessageFor(a=>a.password_Dosen)
                                    </div>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <input type="submit" value="Login" />
                                    </td>
                                </tr>
                             </table>
                                           
                             }
                           </form>
                                        
                                </div>
                            </div>
    
                   
                
             </div>
     </section>
       
    </body>
</html>





