@using System.Activities.Expressions
@using SIMPEDA_V01.Models
@model IEnumerable<SIMPEDA_V01.Models.Shelter>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <title>@ViewBag.Title Peminjaman Sepeda ITS</title>

    </head>

    <body id="page-top" class="index">
       <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
           <div class="navbar-header page-scroll">
               <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                   <span class="sr-only">Toggle navigation</span>
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
                   <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="#page-top">SIMPEDA</a>
           </div>
           <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="hidden">
                            <a href="#page-top"></a>
                        </li>
                        <li class="page-scroll">
                            <a href="#portfolio">Peminjaman</a>
                        </li>
                        <li class="page-scroll">
                            <a href="#loginUser">Login</a>
                        </li>
                        <li class="page-scroll">
                            <a href="#contact">Kontak</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
        
        <header>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <img class="img-responsive" src="~/img/its.gif" alt="">
                        <div class="intro-text">
                            <span class="name">SIMPEDA</span>
                            <hr class="star-light">
                            <span class="skills">Sistem Informasi Peminjaman Sepeda ITS</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <section id="portfolio">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        @{ bool IsSection = true; }
                        @if (IsSection)
                        {
                            <h2>Shelter</h2>
                        }
                            else
                        {
                            <h2>Peminjaman</h2>
                        }
                        <hr class="star-primary">
                    </div>
                </div>

                <div class="row"> 
                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=111})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/a.png" class="img-responsive" alt="" />
                        </a> 
                    </div>

                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=222})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/b.png" class="img-responsive" alt="" />
                        </a>
                    </div>
                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=333})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/c.png" class="img-responsive" alt="" />
                        </a>
                    </div>
                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=444})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/d.png" class="img-responsive" alt="" />
                        </a>
                    </div>
                    <div class="col-sm-4 portfolio-item">
                        <a href="#@Url.Action("SepedaShelter","Sepeda",new{idShelter=555})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/e.png" class="img-responsive" alt="" />
                        </a>
                    </div>
                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=666})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/f.png" class="img-responsive" alt="" />
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section id="loginUser">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2>Login</h2>
                        <hr class="star-primary">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <form role="form">
                            <div class="row">
                                <div class="form-group col-xs-12 floating-label-form-group">
                                    <label for="name">ID</label>
                                    <input class="form-control" type="text" name="name" placeholder="NIP/NRP/No Pegawai">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xs-12 floating-label-form-group">
                                    <label for="email">Kata Sandi</label>
                                    <input class="form-control" type="email" name="email" placeholder="Password">
                                </div>
                            </div>
                            
                            <br>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <button type="submit" class="btn btn-lg btn-success">Masuk</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
     </section>

        <section id="contact">
            <footer class="text-center">
                <div class="footer-above">
                    <div class="container">
                        <div class="row">
                            <div class="footer-col col-md-4">
                                <h3>Lokasi</h3>
                                <p>Teknik Informatika
                                    <br>Fakultas Teknologi Informasi, ITS</p>
                            </div>
                            <div class="footer-col col-md-4">
                                <h3>Around the Web</h3>
                                <ul class="list-inline">
                                    <li><a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                                    </li>
                                    <li><a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
                                    </li>
                                    <li><a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                                    </li>
                                    <li><a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
                                    </li>
                                    <li><a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-dribbble"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="footer-col col-md-4">
                                <h3>Tentang Simpeda</h3>
                                <p>Simpeda adalah Sistem Informasi pendukung kegiatan Eco Campus ITS 2014</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-below">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                Copyright &copy; 2014 - .NET E 2013/2014
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </section>

        
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/classie.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
        <script src="~/Scripts/cbpAnimatedHeader.js"></script>
        <script src="~/Scripts/freelancer.js"></script>
    </body>
</html>
