                        <li class="page-scroll">
                            <a href="#contact">Kontak</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
        
        <header>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <img class="img-responsive" src="~/img/its.gif" alt="">
                        <div class="intro-text">
                            <span class="name">SIMPEDA</span>
                            <hr class="star-light">
                            <span class="skills">Sistem Informasi Peminjaman Sepeda ITS</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <section id="portfolio">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        @{ bool IsSection = true; }
                        @if (IsSection)
                        {
                            <h2>Shelter</h2>
                        }
                            else
                        {
                            <h2>Peminjaman</h2>
                        }
                        <hr class="star-primary">
                    </div>
                </div>

               
                <div class="row"> 
                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=111})" class="portfolio-link" data-toggle="modal">
                            <div class="caption">
                                <div class="caption-content">
                                    <i class="fa fa-search-plus fa-3x"></i>
                                </div>
                            </div>
                            <img src="~/img/portfolio/a.png" class="img-responsive" alt="" />
                        </a> 
                    </div>

                    <div class="col-sm-4 portfolio-item">
                        <a href="@Url.Action("SepedaShelter","Sepeda",new{idShelter=222})" class="portfolio-link" data-toggle="modal">
